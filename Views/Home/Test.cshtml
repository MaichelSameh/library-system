@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <!-- ✅ Bootstrap (Add if not already present) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* ✅ Optional: Vertically center the form */
        body, html {
            height: 100%;
        }

        .form-wrapper {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>

    <div class="container form-wrapper">
        <div class="col-md-6">
            <form id="antiForgeryForm">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="title" class="form-label"><strong>Title:</strong></label>
                    <input type="text" id="title" class="form-control" value="Title" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label"><strong>Description:</strong></label>
                    <input type="text" id="description" class="form-control" value="Description" />
                </div>

                <div class="mb-3">
                    <label for="isbn" class="form-label"><strong>ISBN Code:</strong></label>
                    <input type="text" id="isbn" class="form-control" value="ISBN" />
                </div>

                <div class="mb-3">
                    <label for="tipology" class="form-label"><strong>Tipology:</strong></label>
                    <select id="tipology" class="form-select">
                        <option selected>Choose...</option>
                        <option value="biography">Biography</option>
                        <option value="science">Science</option>
                        <option value="history">History</option>
                        <option value="fantasy">Fantasy</option>
                        <option value="romance">Romance</option>
                        <option value="thriller">Thriller</option>
                        <option value="children">Children's Books</option>
                        <option value="education">Educational</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">Back to List</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Submit</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
