@model IEnumerable<library_system.Models.Pubblisher>

@{
    ViewData["Title"] = "Index";
    var q = (string?)ViewData["q"] ?? "";
}

<h1>Pubblisher</h1>

<form asp-action="Search" method="get" class="mb-3">
    <div class="input-group">
        <input type="text"
               name="q"
               value="@q"
               class="form-control"
               placeholder="Search by company name..." />
        <button type="submit" class="btn btn-primary">Search</button>
        @if (!string.IsNullOrWhiteSpace(q))
        {
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        }
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Company)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Company</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-muted">No publishers found.</td>
            </tr>
        }
    </tbody>
</table>
