@model library_system.Models.Book

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "~/Views/Shared/_DataLayout.cshtml";
}

<h1 class="d-flex justify-content-center vh-1">Create Book</h1>

<hr />
<div class="d-flex justify-content-center align-items-center vh-80">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipology" class="control-label"></label>
                <select asp-for="TipologyId" class ="form-control" asp-items="ViewBag.TipologyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                <select asp-for="AuthorId" class ="form-control" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pubblisher" class="control-label"></label>
                <select asp-for="PubblisherId" class ="form-control" asp-items="ViewBag.PubblisherId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PubblicDate" class="control-label"></label>
                <input asp-for="PubblicDate" class="form-control" />
                <span asp-validation-for="PubblicDate" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
