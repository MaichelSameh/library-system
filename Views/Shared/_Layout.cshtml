<!DOCTYPE html>
<html lang="en">
<style>
    .topnav {
        overflow: hidden;
        background-color: #001f3f; /* Dark Blue */
    }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
            font-size: 17px;
            transition: background-color 0.3s, color 0.3s;
        }

            .topnav a:hover {
                background-color: #0074D9; /* Lighter blue on hover */
                color: white;
            }

            .topnav a.active {
                background-color: #0056b3; /* Active tab color */
                color: white;
            }

        .topnav + .container {
            margin-top: 60px; /* Space under navbar */
        }
</style>

<div class="topnav">
    <a>
        <img src="~/lib/TeamSyncLogoDesign.png " alt="Logo" style="height: 40px; vertical-align: middle;" />
    </a>
    <a href="/Info/Book">Book</a>
    <a href="/Info/Client">Client</a>
    <a href="/Info/About">About Us</a>
    <a href="View/Contact">Contact Us</a>
</div>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Login.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
